<body>
  <div class="card">
    <h1>QR Code Generator</h1>
    <p>Paste a URL or text to generate a QR code instantly.</p>

    <input id="qrInput" type="text" placeholder="https://example.com" />
    <button id="generateBtn">Generate QR Code</button>

    <canvas id="qrCanvas"></canvas>

    <div class="download" id="download">
      <a id="downloadLink" download="qr-code.png">Download QR Code</a>
    </div>

    <div class="error" id="errorMsg">
      Something went wrong. Please refresh and try again.
    </div>
  </div>

  <!-- QR Code library -->
  <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.4/build/qrcode.min.js" defer></script>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.getElementById("generateBtn");
      const input = document.getElementById("qrInput");
      const canvas = document.getElementById("qrCanvas");
      const download = document.getElementById("download");
      const link = document.getElementById("downloadLink");
      const errorMsg = document.getElementById("errorMsg");

      btn.addEventListener("click", () => {
        errorMsg.style.display = "none";
        download.style.display = "none";

        const text = input.value.trim();
        if (!text) return;

        if (typeof QRCode === "undefined") {
          errorMsg.style.display = "block";
          return;
        }

        QRCode.toCanvas(canvas, text, { width: 220 }, (err) => {
          if (err) {
            errorMsg.style.display = "block";
            return;
          }
          canvas.style.display = "block";
          link.href = canvas.toDataURL("image/png");
          download.style.display = "block";
        });
      });
    });
  </script>
</body>
